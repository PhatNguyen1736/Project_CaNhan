<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemthetindungActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/header_phuongthucthanhtoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_BGthanhtoan"
                        android:layout_width="match_parent"
                        android:layout_height="237dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/background_phuonhthucthanhtoan"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/button_back"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_backbutton"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:src="@drawable/avt"
                        app:layout_constraintBottom_toBottomOf="@+id/img_BGthanhtoan"
                        app:layout_constraintEnd_toEndOf="@+id/img_BGthanhtoan"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@+id/img_BGthanhtoan"
                        app:layout_constraintTop_toTopOf="@+id/img_BGthanhtoan"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/txt_ten_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:text="Phát Nguyễn"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/header_thongtincanhan">

                    <LinearLayout
                        android:id="@+id/form_thongtinthe"
                        android:layout_width="match_parent"
                        android:layout_height="580dp"
                        android:background="@drawable/hcn"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/tieude_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tx_thongtinthanhtoan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:paddingLeft="0dp"
                                    android:paddingTop="5dp"
                                    android:text="Thêm thẻ tín dụng/ghi nợ"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="50dp"
                                    android:background="@drawable/hcn_login"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="70dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/ic_visa" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="50dp"
                                    android:background="@drawable/hcn_login"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="50dp"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/ic_mastercard" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/hcn_login"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="70dp"
                                        android:layout_height="50dp"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/ic_jbc" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tx_sothe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="25dp"
                                android:paddingBottom="5dp"
                                android:text="Số thẻ"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edit_sothe"
                                android:layout_width="360dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="@drawable/hcn_login"
                                android:gravity="center"
                                android:hint="Nhập Số In Trên Thẻ"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingTop="15dp">

                            <TextView
                                android:id="@+id/tx_tenchuthe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="25dp"
                                android:paddingBottom="5dp"
                                android:text="Tên chủ thẻ"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edit_tenchuthe"
                                android:layout_width="360dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="@drawable/hcn_login"
                                android:gravity="center"
                                android:hint="Nhập Tên In Trên Thẻ"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingTop="15dp">

                            <LinearLayout
                                android:layout_width="184dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tx_ngayhethan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="25dp"
                                    android:paddingBottom="5dp"
                                    android:text="Ngày hết hạn"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/edit_ngayhethan"
                                    android:layout_width="150dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/hcn_login"
                                    android:gravity="center"
                                    android:hint="Ngày hết hạn"
                                    android:textSize="20dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="184dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tx_ma_cvv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="25dp"
                                    android:paddingBottom="5dp"
                                    android:text="CVV"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/edit_ma_cvv"
                                    android:layout_width="150dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/hcn_login"
                                    android:gravity="center"
                                    android:hint="Nhập mã CVV"
                                    android:textSize="20dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/button_dangkythe"
                            android:layout_width="320dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/custom_button_white"
                            android:text="Thêm Thẻ"
                            android:textColor="@color/black"
                            android:textSize="19dp" />
                        </LinearLayout>
                    </LinearLayout>
            </ScrollView>

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>