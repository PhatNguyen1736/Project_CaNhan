<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChitietnhahangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="390dp"
            android:layout_height="390dp"
            android:src="@drawable/nhahang6"
            android:layout_gravity="center"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/hcn_trangthongtinkhac"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Tuệ Duyên"
                        android:textColor="@color/grey1"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="99 Nguyễn Huệ"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="Giờ mở cửa 8:00 - 21:00"
                        android:textColor="@color/grey1"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@drawable/hcn_login"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/location"
                                android:layout_marginLeft="5dp"/>

                            <TextView
                                android:id="@+id/txtdiachinhahang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:text="5 Nguyễn Chí Thanh, P.9, Quận 5"
                                android:textSize="16dp"
                                android:layout_gravity="center_vertical"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@drawable/hcn_login"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/phone"
                                android:layout_marginLeft="5dp"/>

                            <TextView
                                android:id="@+id/txtsdt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:text="Liên hệ: 0909100832"
                                android:textSize="16dp"
                                android:layout_gravity="center_vertical"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@drawable/hcn_login"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/location"
                                android:layout_marginLeft="5dp"/>

                            <TextView
                                android:id="@+id/nhahanggannhat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:text="Bản đồ"
                                android:textSize="16dp"
                                android:layout_gravity="center_vertical"/>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button_datsanphamtudenlay"
                    android:layout_width="370dp"
                    android:layout_height="80dp"
                    android:text="Đặt sản phẩm\nTự đến lấy tại nhà hàng này"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:background="@drawable/hcn_login"
                    android:elevation="8dp"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textSize="20dp"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>