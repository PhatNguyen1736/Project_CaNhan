<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="341dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/frame_each_dish">

        <RelativeLayout
            android:id="@+id/frameLayout"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/frame_each_dish">

            <ImageView
                android:id="@+id/image"
                android:layout_width="39dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/logo"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/txt_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/image"
                android:hint="18/11/2023, 18:11pm"
                android:textSize="11dp" />

            <LinearLayout
                android:id="@+id/linear_monan"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_date1"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng sản phẩm:" />

                <TextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_elipse"
                android:layout_below="@+id/linear_monan"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/txt_ship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang vận chuyển"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_below="@+id/linear_monan"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txt_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sẽ tới trong 10 phút nữa"
                android:textSize="11dp"
                android:layout_below="@+id/txt_ship"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="8dp"
               />
            <TextView
                android:id="@+id/txt_foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sẽ tới trong 10 phút nữa"
                android:textSize="1dp"
                android:layout_below="@+id/txt_arrival"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/linear_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250.000đ"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="right"/>

                <TextView
                    android:id="@+id/txt_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Tiền mặt"
                    android:textSize="11dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>