<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12dp">

    <!-- CardView bị hủy -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_bihuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/frame_each_dish">
        <RelativeLayout
            android:id="@+id/frameLayout"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/frame_each_dish">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="39dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_logo"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/txt_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/logo"
                android:hint="23/10/2023, 12:01pm"
                android:textSize="11dp" />

            <LinearLayout
                android:id="@+id/linear_monan"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_date1"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng sản phẩm:" />

                <TextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_monan"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/logo"
                android:src="@drawable/ic_ellipse_red" />

            <TextView
                android:id="@+id/txt_ship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_monan"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/logo"
                android:text="Đơn hàng bị hủy"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_setoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:hint="Chi tiết"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:text="70.000đ"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/txt_price"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="Đặt lại"
                android:textSize="12dp"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView giao hàng thành công -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_giaothanhcong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView_bihuy"
        android:layout_marginBottom="14dp"
        app:cardCornerRadius="20dp"
        android:background="@drawable/frame_each_dish">
        <RelativeLayout
            android:id="@+id/frameLayout1"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/frame_each_dish">

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="39dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_logo"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/txt_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/logo1"
                android:hint="24/11/2023, 08:20pm"
                android:textSize="11dp" />

            <LinearLayout
                android:id="@+id/linear_monan1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_date2"
                android:layout_toRightOf="@+id/logo1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_foodName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng sản phẩm:" />

                <TextView
                    android:id="@+id/txt_quantity1"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_green1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_monan1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/logo1"
                android:src="@drawable/ic_elipse" />

            <TextView
                android:id="@+id/txt_ship1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_monan1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/logo1"
                android:text="Giao hàng thành công"
                android:textColor="@color/green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_setoi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:hint="Chi tiết"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:text="70.000đ"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/txt_price1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="Đặt lại"
                android:textSize="12dp"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
