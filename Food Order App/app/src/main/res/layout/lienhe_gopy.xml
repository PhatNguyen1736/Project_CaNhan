<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LienhegopyActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/header_hotro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/button_back"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_backbutton"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_thongtincanhan">

                <LinearLayout
                    android:id="@+id/form_thongtinthe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hcn"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/tieude_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                            <TextView
                                android:id="@+id/tx_bancanhotro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center"
                                android:paddingLeft="0dp"
                                android:paddingTop="5dp"
                                android:text="Bạn Cần Hỗ Trợ ?"
                                android:textSize="30dp"
                                android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tx_chuthich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="0dp"
                            android:paddingTop="5dp"
                            android:text="Để lại lời nhắn. Chúng tôi sẽ liên hệ bạn ngay"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edit_hoten"
                            android:layout_width="360dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hcn_login"
                            android:gravity="center"
                            android:hint="Họ tên"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="15dp">

                        <EditText
                            android:id="@+id/edit_sdt"
                            android:layout_width="360dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hcn_login"
                            android:gravity="center"
                            android:hint="Số điện thoại"
                            android:textSize="20dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="15dp">

                        <EditText
                            android:id="@+id/edit_email"
                            android:layout_width="360dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hcn_login"
                            android:gravity="center"
                            android:hint="Email"
                            android:textSize="20dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="15dp">

                        <EditText
                            android:id="@+id/edit_Noidung"
                            android:layout_width="360dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hcn_login"
                            android:gravity="center"
                            android:hint="Nội dung"
                            android:textSize="20dp" />

                    </LinearLayout>
                    <Button
                        android:id="@+id/button_guilienhe"
                        android:layout_width="320dp"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_button_white"
                        android:text="Gửi"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="19dp"
                        android:layout_marginTop="25dp"/>
                    </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>